<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_habit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Habit 1" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day_one"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Mo" />

            <TextView
                android:id="@+id/tvDayTwo"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Su" />

            <TextView
                android:id="@+id/tvDayThree"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Sa" />

            <TextView
                android:id="@+id/tvDayFour"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Fr" />

            <TextView
                android:id="@+id/tvDayFive"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Th" />

            <TextView
                android:id="@+id/tvDaySix"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="We" />

            <TextView
                android:id="@+id/tvDaySeven"
                android:layout_width="@dimen/habit_day_circle_radius"
                android:layout_height="@dimen/habit_day_circle_radius"
                android:layout_margin="@dimen/habit_day_circle_margin"
                android:background="@drawable/ic_habit_circle"
                android:gravity="center"
                android:textSize="@dimen/habit_day_circle_text_size"
                tools:text="Tu" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="@+id/tvDaySeven"
            android:text="TODAY"
            android:textSize="8sp"
            />

    </LinearLayout>

</LinearLayout>